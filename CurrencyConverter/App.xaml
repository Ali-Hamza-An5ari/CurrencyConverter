<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CurrencyConverter"
             x:Class="CurrencyConverter.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <Color x:Key="DefaultLightGrey">#DCDCDC</Color>
            <Color x:Key="DefaultSelectGrey">#cbcbbC</Color>
            <Color x:Key="DefaultLightBlue">#007AFF</Color>
            <Color x:Key="DefaultBlack">#000000</Color>
            <Color x:Key="DefaultGrey">#505050</Color>
            <Color x:Key="DefaultGreen">#00FF00</Color>
            <Color x:Key="DefaultWhite">#FFFFFF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
